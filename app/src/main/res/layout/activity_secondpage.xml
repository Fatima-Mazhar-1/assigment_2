<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".secondpage"
    android:orientation="vertical"
    android:weightSum="10"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:background="@drawable/img_1">


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:weightSum="10"
        android:background="@drawable/login"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text=" Login"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:id="@+id/login1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.059">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="   Email"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/login2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login1"
            app:layout_constraintVertical_bias="0.008"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginStart="10dp">


        </TextView>

        <EditText
            android:id="@+id/editText"

            android:layout_width="400dp"
            android:layout_height="53dp"
            android:layout_marginStart="10dp"

            android:layout_marginEnd="10dp"
            android:background="@drawable/whiterect"
            android:hint="Enter your Email"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"

            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login2"
            app:layout_constraintVertical_bias="0.025">

        </EditText>

        <TextView
            android:id="@+id/login3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintVertical_bias="0.03"
            android:textSize="20sp"
            android:text="    Password"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            >

        </TextView>

        <EditText
            android:id="@+id/editText2"

            android:layout_width="398dp"
            android:layout_height="53dp"
            android:layout_marginStart="10dp"

            android:layout_marginEnd="10dp"
            android:background="@drawable/whiterect"
            android:hint="Enter your Password"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"

            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login3"
            app:layout_constraintVertical_bias="0.025">

        </EditText>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="246dp"
            android:layout_height="48dp"
            android:onClick="toFifthpage"
            android:text="Forgot Your Password?"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editText2"
            app:layout_constraintHorizontal_bias="1.5"
            app:layout_constraintStart_toStartOf="@+id/editText2"
            app:layout_constraintTop_toBottomOf="@+id/editText2"
            app:layout_constraintVertical_bias="0.045">

        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="141dp"
            android:layout_height="55dp"
            android:background="@drawable/whiterect"
            android:onClick="onButtonClick"
            android:text="Login"
            android:textColor="#50C2C9"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintVertical_bias="0.15" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="152dp"
            android:layout_height="50dp"
            android:text="Dont have an account?"

            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintVertical_bias="0.812">

        </TextView>

        <TextView
            android:id="@+id/signup"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:onClick="onClickText"
            android:text="@string/signup"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintVertical_bias="0.800"

            >


        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>